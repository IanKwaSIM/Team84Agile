<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Weekly Challenges | Fitness App</title>
    <link rel="stylesheet" href="/styles.css" />
    <script defer src="/general.js"></script>
    <script defer src="/challenges.js"></script>
  </head>
  <body>
    <!-- Persistent Top Bar -->
    <nav class="navbar">
      <div class="nav-left">
        <span class="menu-icon">☰</span>
        <h1 class="logo">ELEVATE</h1>
      </div>
    </nav>

    <!-- Sidebar Menu -->
    <div class="sidebar">
      <button class="close-btn">✖</button>
      <ul class="sidebar-menu">
        <% if (user) { %>
        <li><a href="/">Home</a></li>
        <li><a href="/account">My Fitness</a></li>
        <li><a href="/track-workout">Track Workout</a></li>
        <li><a href="#">Social</a></li>
        <li><a href="/challenges">Weekly Challenge</a></li>
        <li><a href="/gymlocator">Gym Locator</a></li>
        <li><a href="/logout">Logout</a></li>
        <% } %>
      </ul>
      <div class="settings-icon">⚙️</div>
    </div>

    <!-- views/challenges.ejs -->
    <div class="challenge-container">
      <h2>Weekly Challenge</h2>
      <p class="challenge-text"><%= challenges %></p>
    </div>
  </body>
</html>
